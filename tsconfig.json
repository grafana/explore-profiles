{
  "extends": "./.config/tsconfig.json",
  "include": [
      "./src",
      "./.config/types",
      "./node_modules/grafana-pyroscope/public/app/lib",
      "./node_modules/grafana-pyroscope/public/app/types"
  ],
  "plugins": [{ "name": "typescript-plugin-css-modules" }],
  "compilerOptions": {
    "baseUrl": "",
    "rootDir": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
       "@pyroscope/flamegraph/*": ["./node_modules/grafana-pyroscope/og/packages/pyroscope-flamegraph/*"],
       "@pyroscope/models/*": ["./node_modules/grafana-pyroscope/og/packages/pyroscope-models/*"],
       "@phlare/*": ["./node_modules/grafana-pyroscope/public/app/*"],

       "@phlare/services/base": ["./src/overrides/services/base"],
       "@phlare/util/history": ["./src/overrides/util/history"],

       "react": ["./node_modules/@types/react"],
       "zod": ["./node_modules/zod"]
    }
  }
}
