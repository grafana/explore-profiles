{
  "extends": "./.config/tsconfig.json",
  "include": ["./src", "./.config/types"],
  "plugins": [{ "name": "typescript-plugin-css-modules" }],
  "compilerOptions": {
    "baseUrl": "",
    "rootDir": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "react": ["./node_modules/@types/react"]
    }
  }
}
